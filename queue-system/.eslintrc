{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "strict": 0,
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-nested-ternary": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-case-declarations": 0,
    "global-require": 0,
    "max-len": [0, { "code": 120, "tabWidth": 2, "ignoreUrls": true }],
    "arrow-body-style": [2, "as-needed"],
    "new-cap": 0,
    "consistent-return": 0,
    "no-unused-vars": 0,
    "no-extend-native": 0,
    "no-underscore-dangle": 0
    "max-len": [0, { code: 120, tabWidth: 4, ignoreUrls: true }],
    "arrow-body-style": [2, "as-needed"],
    "new-cap": 0,
    "consistent-return": 0,
    "no-unused-vars": 0,
    "no-extend-native": 0,
    "no-confusing-arrow": 0
  }
}
