{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "strict": 0,
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-nested-ternary": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-case-declarations": 0,
    "max-len": [0, { "code": 120, "tabWidth": 4, "ignoreUrls": true }],
    "react/jsx-no-bind": [1, { "ignoreRefs": true, "allowArrowFunctions": true, "allowBind": false }],
    "react/jsx-closing-bracket-location": [1, "props-aligned"],
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "react/jsx-boolean-value": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-unused-vars": ["warn"],
    "react/no-did-mount-set-state": 0,
    "react/prefer-stateless-function": 0,
    "no-extend-native": 0,
    "arrow-parens": ["error", "as-needed"],
    "arrow-body-style": 0,
    "no-constant-condition": "error",
  }
}
